{% extends "ProyectoFrontBundle:Helpers2:body.html.twig" %}

{%block contenido%}
<input type="hidden" id="tipopagina" value="page0">
	<div class="content">
		<div class="content-left">
			{%if gallery  is null %}
			<!--IMAGEN DE PAGINA-->
			<div id="contenidoImagen">
				<p style="text-align:center;">
					<a title="{{page.title|title}}" rel="lightbox" 
				href="{%if  media is not null%}{{ media.getWebPath | apply_filter('my_thumb3') }}{%endif%}">
						<img alt="{{page.title|title}}"  src="{%if  media is not null%}{{ media.getWebPath | apply_filter('my_thumb2') }}{%endif%}" class="imagen-pagina" width="470" height="392">
					</a>
				</p>
			</div>
			{%else%}
			<!--GALERIA DE IMAGENES-->
			<div class="art-content">
				<div class="art-row">
				{%for element in galleryResources%}
						<div class="art-cell">
							<a title="{{element.getFriendlyName}}" href="{{path('proyecto_front_resource',{'galerianombre': gallery.getFriendlyName, 'idgaleria' : gallery.getId, 'recursonombre' :element.getFriendlyName , 'idrecurso' :element.getId})}}">
								<img alt="{{element.getFriendlyName}}" src="{{element.getWebPath | apply_filter('front_gallery')}}" width="90" height="90"/>
							</a>
						</div>
				{%endfor%}
				</div>
				<div class="art-content-pag" style="display:none">
					<span class="art-next p-2 pa-1">NEXT</span>
				</div>
			</div>
			{%endif%}
			<div class="contenidoOculto">
				<h3 class="titulo-pagina">{{page.title|upper}}</h3>
				{%if page.scheme==0%}
				<div class="top-margin">
					{{page.content|raw}}
				</div>
				{%else%}
					<div class="ex-container">
						{%for element in exhibitions%}
						<div class="ex-cont">
							<p class="name">
								{{element.name|title}}
							</p>
							<p class="date">
								{{element.date|date("Y/m/d")}}
							</p>
							<p class="name">
								{{element.place|title}}
							</p>
							<div class="desc">
								{{element.content|raw}}
							</div>
						</div>
						{%endfor%}
						<div class="ex-navigation" style="display:none;">
							<span class="ex-next p-2 pa-4">NEXT</span>
						</div>
					</div>
				{%endif%}
				<div class="content-line"></div>
			</div>
		</div>
		<div class="content-right">
			<h3 class="titulo-pagina">{{page.title|upper}}</h3>
			{%if page.scheme==0%}
			<div class="top-margin">
				{{page.content|raw}}
			</div>
			{%else%}
			<div class="ex-container">
				{%for element in exhibitions%}
				<div class="ex-cont">
					<p class="name">
						{{element.name|title}}
					</p>
					<p class="date">
						{{element.date|date("Y/m/d")}}
					</p>
					<p class="name">
						{{element.place|title}}
					</p>
					<div class="desc">
						{{element.content|raw}}
					</div>
				</div>
				{%endfor%}
				<div class="ex-navigation" style="display:none;">
					<span class="ex-next p-2 pa-4">NEXT</span>
				</div>
			</div>
			{%endif%}
		</div>
	</div>
	<div class="page-holder">
		<div class="content-line"></div>
	</div>
{%endblock%}
